.pressnews
	clearfix()
	padding-top 37px

	&__l
		clearfix()
		float left
		width 818px
		padding-bottom 63px
		padding-top 55px

		&-titlepost
			font 25px $font
			color #010101


		&-title
			font 25px $font
			color #010101
			padding-bottom 17px

		&-postdate
			font 17px $font
			color #a4a3a3
			padding-top 19px
			padding-bottom 6px

		&-posttext
			font 17px $font
			color #414141
			line-height 27px

		&-pic
			padding 20px 0 20px 50px

		&-social
			background #f4f4f4
			height 44px
			margin-top 30px
			padding 12px 10px

		&-slider
			clearfix()
			padding 37px 30px
			position relative

			&-left
				float left

			&-right
				float right

			&-left,
			&-right
				width 250px

			&-text
				display block
				font 17px $font
				color #414141
				padding-bottom 5px

			&-date
				font 13px $font
				color #acacac

		&-slideleft,
		&-slideright
			cursor pointer

		&-slideleft
			display block
			position absolute
			width 10px
			height 18px
			background url(../images/sprite2.png) no-repeat 0px -91px
			left 0
			top 58px

		&-slideright
			display block
			position absolute
			width 10px
			height 18px
			background url(../images/sprite2.png) no-repeat -1px -111px
			right 0
			top 58px


		&-list
			padding-bottom 8px

		&-title
			font 25px $font
			color #010101
			border-bottom 1px solid #dadada
			padding-bottom 19px
			margin-bottom 19px
			padding-top 55px

		&-item,
		&-link
			font 17px $font
			color #414141
			line-height 32px

		&-link:hover
			text-decoration underline

		&-item
			clearfix()

		&-link
			display block
			overflow hidden

		&-date
			color #acacac
			padding-right 20px
			float left

	&__r
		clearfix()
		float left
		margin-left 51px
		width 272px
		padding-bottom 30px

		&-title
			font 25px $font
			color #010101
			border-bottom 1px solid #dadada
			padding-bottom 19px
			margin-bottom 19px
			padding-top 55px

		&-icon
			float left
			display inline-block
			margin-right 10px

		&-icon.name
			background url(../images/sprite2.png) no-repeat -48px -671px
			width 21px
			height 22px

		&-icon.tel
			background url(../images/sprite2.png) no-repeat -53px -697px
			width 15px
			height 22px
			margin-top 3px

		&-icon.mail
			background url(../images/sprite2.png) no-repeat -48px -721px
			width 22px
			height 16px
			margin-top 7px

		&-link.mail
			font 17px $font
			color #2f8ad1
			text-decoration none

		&-link.mail:hover
			text-decoration underline

		&-contact
			font 17px $font
			color #414141
			line-height 32px

		&-item
			background #f4f4f4
			height 38px
			border-left 2px solid #e8e8e8
			margin-bottom 2px
			padding 10px 0 0 18px
			cursor pointer

		&-item:hover
			background #000
			

		&-link
			font 17px $font
			color #414141

		&-item:hover > .pressnews__r-link
			color #fff

		&-newslist
			margin-bottom 26px

		&-newsitem
			margin-bottom 13px

		&-newslink
			font 17px $font
			color #414141
			display block
			padding-bottom 5px
			line-height 27px

		&-newslink:hover
			text-decoration underline

		&-newsdate
			font 13px $font
			color #acacac

		&-allnews
			float left
			font 15px $font
			color #2f8ad1
			text-decoration underline

		&-allnews:hover
			text-decoration none

		&-input
			clearfix()
			width 270px
			height 29px
			border 1px solid #e1e1e1
			border-radius 14px
			margin-top 16px
			padding 7px 29px 7px 11px
			font 16px $font
			color #393939
			margin-bottom 13px

			&-text
				float left
				font 12px $font
				color #414141
				width 115px

			&-link
				color #3d92d4
				text-decoration underline

			&-link:hover
				text-decoration none

			&-button
				float right
				font-style normal
				border 1px solid rgba(228,28,34,.57)
				width 123px
				height 33px
				border-radius 16px
				font 18px $font
				color #747474
				text-align center
				padding-top 4px
				cursor pointer

			&-button:hover
				background #f0f0f0




