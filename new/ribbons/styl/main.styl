html,body,div,span,applet,object,iframe,h1,h2,h3,h4,h5,h6,p,blockquote,pre,a,abbr,acronym,address,big,cite,code,del,dfn,em,img,ins,kbd,q,s,samp,small,strike,strong,sub,tt,var,u,inner,dl,dt,dd,ol,ul,li,fieldset,form,label,legend,table,caption,tbody,tfoot,thead,tr,th,td,article,aside,canvas,details,embed,figure,figcaption,footer,header,hgroup,menu,nav,output,ruby,section,summary,time,mark,audio,video
	border 0
	font-size 100%
	font inherit
	vertical-align baseline
	margin 0
	padding 0

article,aside,details,figcaption,figure,footer,header,hgroup,menu,nav,section
	display block

body
	line-height 1

ol,ul
	list-style none

blockquote,q
	quotes none

blockquote:before,blockquote:after,q:before,q:after
	content none

table
	border-collapse collapse
	border-spacing 0

clearfix()
	*zoom 1

	&:after
		content ''
		display table
		clear both

linear-gradient()
	-webkit-webkit-linear-gradient arguments
	-moz-webkit-linear-gradient arguments
	-o-webkit-linear-gradient arguments
	webkit-linear-gradient arguments

@font-face
	font-family: "BauhausStdLight";
	src: url('../fonts/bauhaus-std-light.otf') format('opentype');

$font = 'BauhausStdLight'

* {
	box-sizing: border-box;
	-moz-box-sizing: border-box;
}

html, body {
	// height: 100%;
	font: 12px/18px 'Arial';
	max-width: 1000px;
	margin: 0 auto;
}

a {
	cursor: pointer;
	text-decoration: none;
}
input, textarea, select {
	outline: none;
	border: none;
}

/*+++++++++++++++++++++++++++++++++++++++*/
.preview, .send, .register, .login
	float right
	font 11px 'Arial'
	border-radius 5px
	height 19px
	text-align center
	line-height 19px
	margin: 5px 0 0 5px

.preview, .register
	width 52px
	color #d0c1b2
	background #f3ece4
	&:hover
		color #ffffff
		background #3aafeb

.send , .login
	width 38px
	color #ffffff
	background #3aafeb

.register, .login
	float none
	display inline-block
	margin-bottom 10px

.register
	margin-left 21px

.login
	background #ef2d5d



.wrapper
	width: 1000px;
	background: #eae3d1;
	height: 100%;
	overflow hidden

.header
	clearfix()
	height: 182px;
	background: #fdfcf2;
	border-bottom: 1px solid #d4ccb8;
	overflow: hidden;
	position: relative;
	// z-index: 2;
	z-index 3

	&__bg
		clearfix()
		width: 922px;
		float: right;
		height: 182px; 
		position relative
		background #fdfcf2
		border-bottom-left-radius 5em
		&:after
			content ''
			display block
			width 121px
			height 181px
			position absolute
			background #ef2d5d
			top 0
			left -37px
			border-radius 0 5em
			z-index -1
		&:before
			content ''
			display block
			width 121px
			height 181px
			position absolute
			background #3aafeb
			top 0
			left -77px
			border-radius 0 5em
			z-index -2

	&__top
		padding: 18px 13px 13px 67px;

	&__link
		display: inline-block;
		padding-top: 3px;
		color: #786566;

	&__title
		font: 72px $font;
		height: 76px;
		text-transform: uppercase;

	&__brief
		font: 14px $font;
		color: #cbb6b6;
		padding-left: 47px;

	&__rss-title
		font 14px $font
		color #786566
		text-transform uppercase
		float right
		margin-top 12px

	&__rss-icon
		display block
		width 27px
		height 27px
		background url(../images/rss.png)
.main
	clearfix()
	width 750px
	height 100%
	margin 0 auto
	padding 0 0 0 80px

	&__top
		clearfix()
		padding 11px 0 18px

	&__nav
		clearfix()
		float left
		margin 0 0 0 11px
		padding-top 9px

	&__nav-item
		font 14px $font
		color #786566
		text-transform uppercase
		margin-right 1px
		width 94px
		height 25px
		float left
		text-align center
		line-height 24px
		&:hover
			color #3aafeb
			background #fdfcf2
			border 1px solid #e1dcce
			outline 1px solid #fdfcf2
			border-radius 5px
			line-height 23px

	&__search
		float right
		width 141px
		height 23px
		border 1px solid #d4ccb8
		outline 1px solid #fff
		font italic 14px $font
		color #e3ded1
		padding 5px 25px 5px 5px
		margin 2px 34px 0 0
		background #fdfcf2 url(../images/search.png) no-repeat 116px 3px
		
		&:focus
			color #786566
			font-style normal

	.main__content
		float left
		width 408px
		position relative
		z-index 3

		.main__post
			// float left

			&-title
				width 408px
				height 63px
				border-radius 3em 0
				background #fdfcf2
				padding 10px 0 0 32px
				position relative

				&__date
					width 69px
					height 63px
					background #ef2d5d
					border-radius 0 39px
					position absolute
					top -1px
					left -70px
					font 24px $font
					color #fffffe
					text-align center
					line-height 15px
					padding-top 18px

				&__month
					font 14px $font
					color #fffffe
					text-transform uppercase

				&__name
					font 24px $font
					color #3aafeb
					text-transform uppercase
				&__time
					padding-right 9px
				&__time, &__tags
					font 12px $font
					color #d0c1b2
				&__user, &__tag-item
					font 12px $font
					color #786566
				


			&-article
				width 408px
				// height 681px
				border-radius 0 3em 3em 3em
				background -webkit-radial-gradient(50% 60%, circle cover, #fffffe 0%, #f9f8e9 100%)
				background -moz-radial-gradient(50% 60%, circle cover, #fffffe 0%, #f9f8e9 100%)
				position relative
				padding 27px 39px 29px 36px
				margin-bottom 44px
				&:before
					content ''
					display block
					width 68px
					height 98px
					background #3aafeb
					border-radius 39px 0
					position absolute
					top -1px
					left -69px
				
				&__text
					font 12px 'Arial'
					color #786566
					line-height 18px
					padding-bottom 18px

				&__link
					color #3aafeb

				&__i
					font-style italic

				&__comments
					clearfix()

				&__comment
					width: 336px
					border-bottom 1px dotted #dacacb
					padding-bottom 22px
					margin-bottom 20px

				&__comment-count, &__comment-rss
					float right
					font 12px 'Arial'
					color #d0c1b2
					padding-left 13px

				&__comment-main, &__comment-reply
					clearfix()
					padding-bottom 19px

				&__comment-left
					float left
					width 55px
					height 70px
				
				&__comment-avatar
					border 1px solid #bfa0a2
					width 51px
					height 51px
					padding 1px


				&__comment-addicon
					display inline-block
					width 12px
					height 12px
					background url(../images/reply.png) no-repeat 0px 1px

				&__comment-right
					float left
					width 272px
					&.reply
						width 213px

				&__comment-time
					font 11px 'Arial'
					color #d0c1b2

				&__comment-user, &__comment-addreply
					font 11px 'Arial'
					color #786566

				&__comment-text
					font 11px 'Arial'
					color #ae948e

				&__comment-i
					font-style italic


				&__comment-reply
					padding-left 60px

				&__comment-input
					width: 274px
					height 51px
					border 1px solid #f1ddde
					padding 7px
					color #f1ddde
					font 12px 'Arial'
					background #fdfcf2

	&__account
		float right
		margin-bottom 31px
		position relative
		z-index 2
		&:before
			content ''
			display block
			width 108px
			height 570px
			background #ef2d5d
			border-radius 0 5em
			position absolute
			top -144px
			right -13px
			transform rotate(48.5deg)
			-moz-transform rotate(48.5deg)
			-webkit-transform rotate(48.5deg)
			z-index -1
		&:after
			content ''
			display block
			width 74px
			height 570px
			background #3aafeb
			border-radius 0 5em
			position absolute
			top -128px
			right -7px
			transform rotate(48.5deg)
			-moz-transform rotate(48.5deg)
			-webkit-transform rotate(48.5deg)
			z-index -1

		&__title
			display inline-block
			width 221px
			height 37px
			border-radius 0 3em
			background #fdfcf2
			text-align center
			text-transform uppercase
			font 18px $font
			line-height 35px
			color #786566

		&__block
			width 221px
			height 168px
			background -webkit-radial-gradient(50% 60%, circle cover, #fffffe 0%, #f9f8e9 100%)
			background -moz-radial-gradient(50% 60%, circle cover, #fffffe 0%, #f9f8e9 100%)
			border-radius 3em 0 3em 3em
			padding 30px 38px 25px

		&__id, &__pass
			width 141px
			height 23px
			border 1px solid #d4ccb8
			outline 1px solid #fff
			font italic 14px $font
			color #e3ded1
			background #fdfcf2
			padding 5px 25px 5px 5px
			margin 2px 34px 0 0
			margin-bottom 6px

			&:focus
				color #786566
				font-style normal

		&__forget-pass
			font 12px 'Arial'
			color #d0c1b2
			margin-left 25px
	&__news
		float right
		position relative
		z-index 2
		margin-bottom 31px
		&:before
			content ''
			display block
			width 90px
			height 1080px
			background #3aafeb
			position absolute
			top 76px
			left -320px
			transform rotate(48.5deg)
			-moz-transform rotate(48.5deg)
			-webkit-transform rotate(48.5deg)
			z-index -1
		&:after
			content ''
			display block
			width 52px
			height 1080px
			background #ef2d5d
			position absolute
			top 120px
			left -320px
			transform rotate(48.5deg)
			-moz-transform rotate(48.5deg)
			-webkit-transform rotate(48.5deg)
			z-index -1

		&__title
			display inline-block
			width 221px
			height 37px
			border-radius 0 3em
			background #fdfcf2
			text-align center
			text-transform uppercase
			font 18px $font
			line-height 35px
			color #786566

		&__list
			width 221px
			background -webkit-radial-gradient(50% 60%, circle cover, #fffffe 0%, #f9f8e9 100%)
			background -moz-radial-gradient(50% 60%, circle cover, #fffffe 0%, #f9f8e9 100%)
			border-radius 3em 0 3em 3em
			padding 30px 38px 0px

		&__list-item
			padding-bottom 20px
			font 12px 'Arial'
			color #786566

		&__list-link
			font 12px 'Arial'
			color #786566
			&:hover
				text-decoration underline

	&__tags
		float right
		width 221px

		&__title
			display inline-block
			width 221px
			height 37px
			border-radius 0 3em
			background #fdfcf2
			text-align center
			text-transform uppercase
			font 18px $font
			line-height 35px
			color #786566

		&__block
			width 221px
			// height 168px
			background -webkit-radial-gradient(50% 60%, circle cover, #fffffe 0%, #f9f8e9 100%)
			background -moz-radial-gradient(50% 60%, circle cover, #fffffe 0%, #f9f8e9 100%)
			border-radius 3em 0 3em 3em
			padding 30px 38px 25px
			text-align center

		&__item
			display inline-block
			font 18px $font
			text-transform uppercase
			color #786566
			margin 0 6px 17px 0
			&.blue-tag
				color #3aafeb
			&.pink-tag
				color #ef2d5d

		&__item-sup
			font-size 12px

.footer
	height 298px
	background #3b2f2f
	border-top 1px solid #746868
	position relative
	z-index 2

	&__inner
		clearfix()
		width: 750px
		margin 0 auto
		padding 28px 0 0 80px

	&__nav
		width 170px
		float left

	&__title
		font 20px $font
		color #fff
		text-transform uppercase
		display block
		margin-bottom 20px

	&__list-item
		font 14px $font
		padding-bottom 11px

	&__list-link
		color #8d887f

	&__photos
		clearfix()
		float left
		width 236px

	&__photo-item
		float left
		margin-right 15px
		margin-bottom 15px
		border 1px solid #eae3d1
		width 49px
		height 49px

	&__about
		float right
		width 190px

	&__title
		font 20px $font
		color #fff
		text-transform uppercase
