$base-color = #595D5D;
$back-color = #F5FAFC;
$link-color = #39A9E1;

html, body
	background #fff
	font-family 'Raleway', sans-serif
	color $base-color

body
	padding 30px
	min-width 320px

.wrapper
	display flex
	align-items stretch
	&.portfolio
		justify-content center
		flex-wrap wrap

.sidebar
	min-width 250px
	border-right 1px solid $base-color
	padding 0 20px 0 10px

	&__header
		text-align center
		margin 0 10px
		padding 10px 0
		border-bottom 1px solid $base-color
		margin-bottom 15px

		h1
			font-size 30px
			font-weight 400
			line-height 50px

.content
	width 100%
	padding 0 10px 0 20px

.block
	padding 10px
	margin-bottom 15px
	border-radius 4px
	background $back-color

	&__sublist
		padding-left 15px
		list-style-type: disc;

	&__title
		font-size 18px
		font-weight 600
		line-height 34px

	ul
		font-size 14px

		li
			line-height 20px

a
	color $link-color

	&:hover
		text-decoration none

.mark
	display flex
	align-items space-between

	&__title
		max-width 100px
		min-width 100px
		line-height 25px
		font-size 14px

	&__board
		width 100%
		height 25px
		text-align right

		&.one-mark span:nth-of-type(-n + 1)
			&:before
				content ''
				position absolute
				width 1px
				height 15px
				left 6px
				background $base-color
				transform rotate(45deg);

			&:after
				content ''
				position absolute
				width 1px
				height 15px
				right 8px
				background $base-color
				transform rotate(-45deg);

		&.two-mark span:nth-of-type(-n + 2)
			&:before
				content ''
				position absolute
				width 1px
				height 15px
				left 6px
				background $base-color
				transform rotate(45deg);

			&:after
				content ''
				position absolute
				width 1px
				height 15px
				right 8px
				background $base-color
				transform rotate(-45deg);

		&.three-mark span:nth-of-type(-n + 3)
			&:before
				content ''
				position absolute
				width 1px
				height 15px
				left 6px
				background $base-color
				transform rotate(45deg);

			&:after
				content ''
				position absolute
				width 1px
				height 15px
				right 8px
				background $base-color
				transform rotate(-45deg);

		&.four-mark span:nth-of-type(-n + 4)
			&:before
				content ''
				position absolute
				width 1px
				height 15px
				left 6px
				background $base-color
				transform rotate(45deg);

			&:after
				content ''
				position absolute
				width 1px
				height 15px
				right 8px
				background $base-color
				transform rotate(-45deg);


		&.five-mark span:nth-of-type(-n + 5)
			&:before
				content ''
				position absolute
				width 1px
				height 15px
				left 6px
				background $base-color
				transform rotate(45deg);

			&:after
				content ''
				position absolute
				width 1px
				height 15px
				right 8px
				background $base-color
				transform rotate(-45deg);

		span
			position relative
			width 15px
			height 20px
			display inline-block
			border-bottom 1px solid $base-color

.button
	display block
	width 100%
	height 40px
	margin 10px 0
	padding 0
	border 1px solid $base-color
	border-radius 4px
	text-transform uppercase
	text-align center
	color $base-color
	text-decoration none
	line-height 38px
	font-size 14px

	&:hover
		background $base-color
		color #fff

.item
	min-width 200px
	height 150px
	overflow hidden
	position relative
	margin 10px 15px
	border 1px solid $base-color
	display flex
	align-items center
	justify-content center

	&:hover
		.item__preview
			display flex

	&__preview
		display none
		position absolute
		width 100%
		top 0
		left 0
		height 100%
		align-items center
		background #fff
		padding 10px

	img
		width 100%
		opacity 0.5

.non-important
	color #9FB3BC


@media only screen and (max-width: 600px)
	.wrapper
		flex-direction column
	.sidebar
		min-width 100%
		border-right none
		padding 0 0 0 10px
