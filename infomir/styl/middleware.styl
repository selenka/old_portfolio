
/*================================================================*/
.feature
	text-align center
	padding-top 76px
	&__title
		font 50px $font
		color #1a1a1a
		padding-bottom 30px

	// &__text-block
	// 	overflow hidden
	// 	height 160px

	&__text-content
		height 160px

	&__tag-line
		display inline-block
		font 25px $font
		color #262626
		padding-bottom 17px
	&__text
		// display inline-block
		font 17px $font
		color #414141
		padding-bottom 80px
		Line-height 25px

	&__slider
		width 831px
		height 548px
		background url(../images/tv-big.png) no-repeat
		margin 0 auto
		padding-top 3px
		position relative
		margin-bottom 80px
		
	&__slider-box
		width 827px
		height 464px
		overflow hidden
		padding 2px 1px 1px 5px
	&__l.slide-left,
	&__r.slide-right
		display block
		width 14px
		height 24px
		position absolute
		cursor pointer

	&__l.slide-left
			left -93px
			top 226px
			background url(../images/sprite2.png) no-repeat 0px -426px
		
	&__r.slide-right
		right -93px
		top 226px
		background url(../images/sprite2.png) no-repeat -26px -426px

	&__list
		clearfix()
		margin-bottom 95px
		margin-top 69px
	&__list-item
		float left
		width 359px
		height 238px
		border 1px solid #e4e4e4
		border-radius 2px
		padding 43px 65px 40px 35px
		text-align left
		box-shadow 0px 4px 10px -6px rgba(0,0,0, .3)
		position relative
		margin-right 30px
	&__list-item:last-child
		margin-right 0
	&__list-item:after
		content ''
		position absolute
		display block
		width 75px
		height 75px
		border-radius 50%
		border 13px solid #fff
		box-shadow 0px 3px 0px -1px #e4e4e4
		top -73px
		right 129px
	&__list-item.user-icon:after
		background #cccccc url(../images/sprite2.png) no-repeat 18px -313px 
	&__list-item.user-icon:hover:after
		background #e41c22 url(../images/sprite2.png) no-repeat 18px -313px 

	&__list-item.settings-icon:after
		background #cccccc url(../images/sprite2.png) no-repeat 18px -462px
	&__list-item.settings-icon:hover:after
		background #e41c22 url(../images/sprite2.png) no-repeat 18px -462px 

	&__list-item.hand-icon:after
		background #cccccc url(../images/sprite2.png) no-repeat 18px -538px

	&__list-item.hand-icon:hover:after
		background #e41c22 url(../images/sprite2.png) no-repeat 18px -538px

	&__item-title
		font 25px $font
		color #262626
	&__item-text
		font 15px $font
		color #5b5b5b
		display inline-block
		padding-top 23px
	&__item-link
		font 15px $font
		color #e41c22
		text-decoration none
		display inline-block
		padding-top 25px
	&__item-link:hover
		text-decoration underline


