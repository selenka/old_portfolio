.support__wel
	height 285px
	padding-left 0 210px
	// background url(../images/support-girl.png) no-repeat 92px 22px
	border-bottom 1px solid #e4e4e4
	text-align center
	margin-top 44px

	&-title
		font 43px $font
		color #010101
		padding-bottom 14px
		padding-top: 37px

	&-text
		font 17px $font
		color #414141
		line-height 27px

.support__list
	clearfix()
	padding-top 57px
	padding-bottom 70px

	&-item
		float left
		width 378px
		height 197px
		border-radius 9px
		border 1px solid #e4e4e4
		text-align center
		box-shadow 0px 4px 10px -6px rgba(0,0,0, .3)
		margin-bottom 57px
		
	&-picbox
		width 240px
		height 104px
		overflow hidden
		margin-left 65px
		margin-bottom 10px

	&-link
		font 25px $font
		color #262626
		text-decoration none
		padding-top 32px
		display block
		width 100%
		height 100%

