
/*================================================================*/
.feature
	text-align center
	padding-top 76px

	&__title-mware
		font 43px $font
		color #010101
		padding-bottom 30px
	&__text-mware
		// display inline-block
		font 17px $font
		color #414141
		padding-bottom 54px
		line-height 27px
	
	&__mware
		clearfix()
		border-top 1px solid #dcdcdc
		border-bottom 1px solid #dcdcdc
		padding 48px 0


		&-title
			font 25px $font
			color #010101

		&-title.control
			padding-bottom 428px
			background url(../images/canals.png) no-repeat 195px 54px

		&-title.monit
			padding-bottom 547px
			background url(../images/monitoring.png) no-repeat -23px 93px

		&-text
			font 17px $font
			color #010101
			padding-top 20px

		&-text.tarif
			font 17px $font
			color #010101
			line-height 27px
			padding 20px 139px 197px 651px
			text-align left
			background url(../images/tarif.png) no-repeat 53px 34px

		&-list
			clearfix()
			padding-top 38px

		&-item
			float left
			width 380px
			height 336px
			padding 302px 40px 0
			font 17px $font
			color #414141

		&-item.plant1
			background url(../images/plant1.png) no-repeat 36px 123px

		&-item.plant2
			background url(../images/plant2.png) no-repeat 57px 42px

		&-item.plant3
			background url(../images/plant3.png) no-repeat 77px -14px

		&-col
			width 380px
			text-align left
			float left
			font 17px $font
			color #414141

		&-tablist
			clearfix()

		&-tab
			float left
			border-right 1px solid #f0f0f0
			border-left 1px solid #f0f0f0
			padding 12px 57px























	&__list
		clearfix()
		margin-bottom 95px
		margin-top 69px

	&__list.midware
		margin-top 118px
	&__list-item
		float left
		width 359px
		height 238px
		border 1px solid #e4e4e4
		border-radius 2px
		padding 43px 65px 40px 35px
		text-align left
		box-shadow 0px 4px 10px -6px rgba(0,0,0, .3)
		position relative
		margin-right 30px
	&__list-item:last-child
		margin-right 0
	&__list-item:after
		content ''
		position absolute
		display block
		width 75px
		height 75px
		border-radius 50%
		border 13px solid #fff
		box-shadow 0px 3px 0px -1px #e4e4e4
		top -73px
		right 129px
	&__list-item.user-icon:after
		background #cccccc url(../images/sprite2.png) no-repeat 18px -313px 
	&__list-item.user-icon:hover:after
		background #e41c22 url(../images/sprite2.png) no-repeat 18px -313px 

	&__list-item.settings-icon:after
		background #cccccc url(../images/sprite2.png) no-repeat 18px -462px
	&__list-item.settings-icon:hover:after
		background #e41c22 url(../images/sprite2.png) no-repeat 18px -462px 

	&__list-item.hand-icon:after
		background #cccccc url(../images/sprite2.png) no-repeat 18px -538px

	&__list-item.hand-icon:hover:after
		background #e41c22 url(../images/sprite2.png) no-repeat 18px -538px

	&__item-title
		font 25px $font
		color #262626
	&__item-text
		font 15px $font
		color #5b5b5b
		display inline-block
		padding-top 23px
	&__item-link
		font 15px $font
		color #e41c22
		text-decoration none
		display inline-block
		padding-top 25px
	&__item-link:hover
		text-decoration underline


