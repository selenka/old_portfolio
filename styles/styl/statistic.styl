#statistic
	display none
	
.buttongroup
	clearfix()
	.transparent-button
		float left
		padding 10px 26px
		color $text
		font-size 14px
		border 2px solid $base-grey
		&.first
			border-right none
			border-radius 4px 0 0 4px
		&.last
			border-left none
			border-radius 0 4px 4px 0
		&:hover
			background $grafit
			
		&[data-selected="true"]
			background $grafit
		
.table
	padding-top 25px
	
	table
		width 100%
		
		tr th,
		tr td
			padding 12px 10px
			text-align center
			
		tr th
			position relative
			color $text-accent
			&:after
				content ''
				position absolute
				display block
				height 18px
				width 2px
				background $base-grey
				right 0
				bottom 0
			&:last-child:after
				content none
				
		tr td
			font-size 14px
			
		thead tr
			border-bottom 3px solid $base-grey
			
		tbody tr
			border-bottom 1px solid $base-grey
			&:hover
				border-bottom 1px solid $base-green
			&[data-extra="closed"]
				display none
			
			&[data-extra="opened"]
				display table-row
				border-bottom 1px solid $base-green
				td
					text-align left
					padding 15px
			
			&[data-selected="true"]
				border-bottom 1px solid transparent
			
				
