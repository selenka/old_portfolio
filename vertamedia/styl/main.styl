@import 'mixins.styl'
@import 'variables.styl'
@import 'fonts.styl'
// default styles start
*
	box-sizing border-box
	-moz-box-sizing border-box
i
	display inline-block

a
	text-decoration none
	cursor pointer
body
	position relative
	
html, body
	min-height 100%
	width 100%
	margin 0 auto
	background #fff
	font 13px $base-font
	color #777

input, button, textarea
	outline none
	border none
	cursor pointer
	
input[type=text]::-ms-clear
	display none

input[type=password]::-ms-reveal
	display none

input[type='submit']
	-webkit-appearance none
	-moz-appearance none
	appearance none

::-webkit-input-placeholder 
	color #000
::-moz-placeholder
	color #000 /* firefox 19+ */
:-ms-input-placeholder
	color #000/* ie */
input:-moz-placeholder
	color #000

textarea:focus::-webkit-input-placeholder,
textarea:focus:-moz-placeholder
	color transparent
// default styles end

//owl carousel custom styles start
.owl-dot
	display inline-block
	width 12px
	height 12px
	background #47464b
	border-radius 50%
	margin 10px
	&.active
		background transparent
		border 1px solid #47464b
	
//owl carousel custom styles end

//select2 custom styles start
.select2
	width 100%
	.lang-drop
		background transparent
		outline none
		border none
		border-radius 0
		height 45px
		
		.select2-selection__rendered
			display inline-block
			font 13px $museo-sans-500
			color #fff
			padding 15px 15px

			&:hover
				color $blue
				cursor pointer
				
		.select2-selection__arrow
			display none
			
.lang-dropdown
	border none
	border-radius 0
	background rgba(0,0,0,0.8)
	.select2-results
		.select2-results__option
			padding 15px
			background none
			font 13px $museo-sans-500
			color #fff
		.select2-results__option.select2-results__option--highlighted
			background $blue
		
//select2 custom styles end

// page styles start
.header-wrap
	max-width 1600px
	margin 0 auto
.wrap
	max-width 1150px
	margin 0 auto
	clearfix()

.expand-menu
	display none
	border-top 5px solid $blue
	border-bottom 5px solid $blue
	width 30px
	height 30px
	background-color transparent
	position relative
	margin 16px
	cursor pointer
	user-select(none)
	
	&:after
		content ''
		position absolute
		display block
		width 100%
		height 5px
		background-color $orange
		left 0
		top 8px
		
.expand-menu-input
	display none
.expand-menu-input:checked + #mobile-menu
	display block
	
	
// page styles end
.header
	position absolute
	top 0
	width 100%
	min-height 98px
	clearfix()
	-webkit-animation-name opacity-increase
	-webkit-animation-duration 4s
	animation-name opacity-increase
	animation-duration 4s
		
	&__link
		display inline-block
		text-indent -9999px
		width 160px
		height 135px
		background url(../images/logo.png) no-repeat 50% 25%;
	&__logo
		display inline-block
		width 20% //400px
		min-width 350px
		height 135px
		background url(../images/logo-shape.png) no-repeat
		padding-left 90px

	&__menu
		position absolute
		top 0
		right 0
		width 85%
		min-height 98px
		border-bottom 1px solid $orange
		text-align right

	&__note,
	&__right
		display inline-block
		text-transform uppercase
		text-align right
	&__note
		vertical-align top
		padding-top 16px
		padding-right 10%
		font 18px $museo-sans-500
		color #fff
		text-align center
		
	&__nav-top
		clearfix()

		li
			float right
			border-bottom 1px solid $orange
			height 45px
			
			&.orange-link
				background $orange
					
			&.blue-link
				background $blue
					
			a
				display inline-block
				font 13px $museo-sans-500
				color #fff
				padding 15px 15px
			
			&:last-child a
				padding-left 0
				
			&:hover a
				color $blue
			&.orange-link:hover a,
			&.blue-link:hover a
				color #fff

			&.orange-link:hover,
			&.blue-link:hover
				opacity 0.7
	&__nav-bottom
		a
			font 18px $museo-sans-900
			color #fff
			display inline-block
			padding 15px 15px 10px 15px;
			border-bottom 4px solid transparent
			transition(border 0.2s \, color 0.5s)
			
			&:hover
				border-bottom 4px solid $orange
				color $blue

.page-content
	width 100%
.main
	height 700px
	width 100%
	display table
	background $dark-grey url(../images/pics/main-bg.jpg) no-repeat
	-webkit-background-size cover
	background-size cover
	background-position 50% 50%
	color #fff
		
	&__center
		display table-cell
		vertical-align middle
		text-align center
		
	&__block
		display inline-block
		max-width 580px
		
	&__title
		font 48px $museo-sans-900
		text-transform uppercase
		
	&__text
		font 24px $museo-500
		padding 35px 0 55px
		
	&__btn
		display inline-block
		background $bright-orange
		font 24px $museo-sans-900
		color #fff
		padding 16px
		min-width 340px
		text-transform uppercase
		&:hover
			opacity 0.7
			
.note
	font 24px $museo-sans-300
	color #777
	padding 130px 20px

.slider
	background url('../images/triangles.jpg') repeat
	clearfix()
	
	&__left,
	&__right
		width 50%
		float left
		height 700px
		display table
		
	&__left
		border-right 1px solid #c0c8cc
		position relative
		&:before
			content ''
			position absolute
			display block
			width 15px
			height 13px
			background url(../images/spritesheet-backs.png) 0 0
			bottom -45px
			right -8px
		
	&__center
		display table-cell
		vertical-align middle
		
	&__box
		width 570px
		padding 70px
	
	&__title
		font 36px $museo-300
		color $bright-orange
		padding-bottom 50px
		
	&__text
		font 24px $museo-300
		color #77767c
	
.ipad
	max-height 500px
	background #fff
	border-radius 35px 0 0 35px
	padding 60px 0 60px 60px
	position relative
	&:before
		content ''
		position absolute
		display block
		width 10px
		height 10px
		border 1px solid #dcdcdc
		border-radius 50%
		top 50%
		left 25px
	&__frame
		box-shadow -1px 1px 4px -1px rgba(0,0,0,0.6)
		overflow hidden
	img
		width 100%
		
.scheme
	padding 50px 0
	text-align center
	
	&__title
		padding 3px 20px 0
		background #47464b
		font 20px $museo-900
		color #fff
		letter-spacing 6px
		text-transform uppercase
		display inline-block
		line-height 30px
		position relative
		&:before
			content ''
			position absolute
			width 30px
			height 50px
			background #fff
			left -23px
			border-radius 50%
			top -7px
		&:after
			content ''
			position absolute
			width 30px
			height 50px
			background #fff
			right -23px
			border-radius 50%
			top -7px
			
	&__list
		width 100%
		text-align justify
		padding-top: 100px;
		position relative
		&:after
			content ''
			display inline-block
			width 100%
		&:before
			content ''
			position absolute
			display block
			width 90%
			height 20px
			background #fff
			top 56%
			left 4%
			border-bottom 1px solid #bcbdc0
			z-index 1
			
		li
			display inline-block
			width 180px
			text-align center
			vertical-align top
			margin-bottom 50px
			&:first-child span:before
				content ''
				position absolute
				display block
				height 20px
				width 100px
				background #fff
				top 0 
				left -10px
				z-index 2
			&:last-child span:before
				content ''
				position absolute
				display block
				height 20px
				width 100px
				background #fff
				top 0 
				right -11px
				z-index 2
			
			span
				display block
				padding-top 40px
				font 22px $museo-500
				color #47464b
				position relative
				&:after
					content ''
					position absolute
					display block
					height 20px
					width 1px
					background #bcbdc0
					top 0 
					left 50%
	
	&__frame
		width 100%
		height 160px
		
.join
	height 700px
	width 100%
	display table
	background $dark-grey url(../images/pics/second-bg.jpg) no-repeat
	-webkit-background-size cover
	background-size cover
	background-position 50% 50%
	color #fff
		
	&__center
		display table-cell
		vertical-align middle
		text-align center
		
	&__block
		display inline-block
		max-width 450px
		
	&__text
		font 24px $museo-500
		padding 35px 0 55px
		
	&__btn
		display inline-block
		background $bright-orange
		font 24px $museo-sans-900
		color #fff
		padding 16px
		min-width 340px
		text-transform uppercase
		&:hover
			opacity 0.7

.footer
	background $dark-grey
	padding 60px 0
	&__left,
	&__right
		width 50%
		float left
	&__left
		padding-right 75px
		border-right 1px solid #787a81
	&__right
		padding-left 75px
	&__menu
		width 100%
		text-align justify
		&:after
			content ''
			display inline-block
			width 100%
		&-item
			display inline-block
		&-title
			display inline-block
			text-transform uppercase
			font 14px $museo-900
			color #fff
			padding 9px 0
	&__list
		margin-bottom 30px
		
		&.contacts li
			padding 3px 0
		
	&__list li
		padding 9px 0
		font 13px $museo-300
		color #fff
		
	&__list li a
		font 13px $museo-300
		color #fff
		&:hover
			text-decoration underline
			
	&__contacts
		display inline-block
		padding-right 100px
		
	&__logos
		display inline-block
		li
			padding 6px 0
			
	&__links li		
		margin-right 18px
		&:hover a
			opacity 0.7
			
	&__links li,
	&__links a
		display inline-block
		
	&__copywrite
		font 14px $museo-sans-300
		color #fff
		padding-top 20px
		
	&__btn
		display inline-block
		border 2px solid $blue
		padding 15px 50px
		font 24px $museo-sans-900
		color #fff
		text-transform uppercase
		max-width 265px
		margin-top 30px
		
		&:hover
			border-color $orange
			color $blue
		
		

@media only screen and (max-width: 1600px)
	.header
		&__menu
			width 80%
			
@media only screen and (max-width: 1300px)
	.wrap
		padding 0 40px
	.slider
		&__box
			width 450px
			padding 40px

@media only screen and (max-width: 1180px)
	.header
		&__menu
			width 75%
		&__note
			padding-right 0
			font-size 12px
	.main,
	.slider,
	.slider__left,
	.slider__right,
	.join
		height 600px

@media only screen and (max-width: 980px)
	.header
		&__logo
			width inherit
			max-width inherit
			background none
			padding-left 0
			height inherit
		&__link
			height 98px
		&__menu
			width 100%
		&__note
			display inline-block
			text-align right
			padding 20px 15px
			font-size 16px
		&__right
			display block
			
	.main
		&__center
			vertical-align bottom
			padding 50px 0
		&__title
			word-break break-word
			
	.slider
		&__box
			width 300px
		&__title
			font-size 26px
		&__text
			font-size 16px
	.ipad
		padding 40px 0 40px 40px
	
	.join
		background-position 0 50%
		
		&__center
			padding 50px 0

@media only screen and (max-width: 820px)
	.scheme
		&__list:before
			content none
		&__list li span:after
			content none
		

@media only screen and (max-width: 768px)
	.expand-menu
		display inline-block
		margin 16px 25px
	.header	
		&__right
			display none
			clearfix()
			width 100%
			margin-top 30px
			padding 25px
			
		&__nav-top
			width 50%
			float left
			text-align left
			li
				background rgba(0,0,0, 0.8)
			li,
			a
				width 100%
				
			li.blue-link,
			li.orange-link
				width 50%
				
			li:last-child a
				padding-left 15px
			li:last-child
				border-bottom 1px solid transparent
				
		&__nav-bottom
			width 50%
			float right
			text-align right
				
			a
				width 100%
				height 45px
				font-size 13px
				padding 15px
				border-bottom 1px solid transparent
				background rgba(0,0,0, 0.8)
				
			a:hover
				border-bottom-width 1px
			a:last-child
				border-bottom 1px solid transparent
			a:last-child:hover
				border-bottom 1px solid transparent
	
	.main
		height 500px
		&__title
			font-size 38px
		&__text
			font-size 18px
		&__btn
			font-size 18px
			min-width 240px
			padding 12px
			
	.note
		font-size 18px
		padding 50px 20px
		
	.join
		height 500px
		
		&__text
			font-size 18px
		&__btn
			font-size 18px
			min-width 240px
			padding 12px
			
	.footer
		&__left,
		&__right
			width 100%
			display block
		&__left
			border-right none
		&__right
			padding-left 0
			padding-top 40px
		&__btn
			vertical-align top
			margin-left 30px
		
@media only screen and (max-width: 680px)
	.slider
		height 100%
		padding-top 30px

		&__left,
		&__right
			height 100%
			width 100%
			float none
		&__left
			border-right none
			&:before
				content none
			
		&__center
			text-align center
			
		&__box
			width 400px
			margin 0 auto
	.ipad
		padding 40px
		width 80%
		margin 0 auto
		border-radius 35px
		&:before
			left 15px
		&__frame
			box-shadow 0px 1px 6px -1px rgba(0,0,0,0.6)
		
	.scheme
		position relative
		&:before
			content ''
			position absolute
			display block
			width 15px
			height 13px
			background url(../images/spritesheet-backs.png) 0 0
			top 25px
			left 50%
			
@media only screen and (max-width: 480px)
	.expand-menu
		margin 0px 25px
	.wrap
		padding 0 10px
	.header
		&__note
			display block
			font-size 12px
		&__right
			margin-top 25px
		&__logo
			min-width 320px
			
	.main
		&__title
			font-size 24px
			
		&__text
			font-size 16px
		&__btn
			font-size 16px
			min-width 140px
			padding 8px
			
	.slider
		&__box
			width 300px
			padding 10px
		&__title
			font-size 18px
			padding-bottom 25px
		&__text
			font-size 12px
	.scheme
		&__title:before,
		&__title:after
			content none
				
	.join		
		&__text
			font-size 16px
		&__btn
			font-size 16px
			min-width 140px
			padding 8px
	.footer
		&__left
			padding-right 0
		&__right
			text-align center
		&__contacts
			padding-right 20px
		&__btn
			margin-left 0
			max-width 100%
			width 100%
			text-align center
			
@media only screen and (max-width: 400px)
	.scheme
		&__list li
			display block
			margin 0 auto
			padding 30px 0
			border-bottom 1px solid #bcbdc0
			
//animations		
@-webkit-keyframes opacity-increase
	0%
		opacity 0
	100%
		opacity 1

@-moz-keyframes opacity-increase
	0%
		opacity 0
	100%
		opacity 1
@keyframes opacity-increase
	0%
		opacity 0
	100%
		opacity 1