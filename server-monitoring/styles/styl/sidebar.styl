.icon-menu
	float right
	font-size 18px
	padding-right 18px
	color #e1e8ed
	
.sidebar
	background $grafit
	min-width 65px
	max-width 65px
	min-height 100%
	padding 80px 0 80px
	position relative
				
	&__nav-item
		clearfix()
		position relative
		width 155px
		height 60px
		display block
		color $text
		background $grafit
		border-right 3px solid $grafit
		border-radius 0 3px 3px 0
		line-height 20px
		font-size 14px
		font-weight 600
		text-transform uppercase
		text-decoration none
		margin 2px 0 2px -86px
		padding-top 20px
		padding-left 10px
		transition 1s
		&:first-child:before
			content ''
			position absolute
			top -2px
			left 0
			display block
			width 100%
			height 2px
			background $base-dark
		
		&:after
			content ''
			position absolute
			bottom -2px
			left 0
			display block
			width 100%
			height 2px
			background $base-dark
		
		&:hover
			margin-left 0
			padding-left 18px
			transition .6s
			
		&.active
			border-right-color $base-green
			background $grafit-hover
			.icon-menu
				color $base-green
	