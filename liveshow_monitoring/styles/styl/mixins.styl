clearfix()
	*zoom 1

	&:after
		content ''
		display table
		clear both

prefix(prop, args)
	-webkit-{prop} (args)
	-moz-{prop} (args)
	-ms-{prop} (args)
	-o-{prop} (args)
	{prop} (args)

linear_gradient(origin, colors...)

	fallback = colors[1][0]

	colors = join(', ', colors)
	colors = unquote(colors)

	background-color: fallback
	background: -webkit-linear-gradient(origin, colors) // Chrome, Safari
	background:    -moz-linear-gradient(origin, colors) // Firefox (3.6 - 15)
	background:     -ms-linear-gradient(origin, colors) // IE 10
	background:      -o-linear-gradient(origin, colors) // Opera (11.1 - 12.0)
	background:         linear-gradient(origin, colors) // W3C
	
transition()
	prefix('transition', arguments)

transform()
	prefix('transform', arguments)
	
user-select()
	prefix('user-select', arguments)