$background-color = #fbfbfb;
$text-color = #636363;
$border-color = #cfcfcf;
$active-tab-border-bottom = #f0f0f0;
$active-tab-background = #ffffff;
$item-background = #fbfbfb;
$popup-background = #f9f9f9;
$base-gradient-top = #fefefe;
$base-gradient-center = #f4f4f4;
$base-gradient-bottom = #e9e9e9;
$user-offline-text-color = #a0a0a0;
$user-online-text-color = #6cb758;
$free-show-link-color = #6cb758;
$paid-show-link-color = #6fa9bf;
$private-show-link-color = #a09966;

$font-ubuntubold = 'ubuntubold';
$font-ubunturegular = 'ubunturegular';
$font-base = 'Arial';


//paths according to style.css in root
@font-face
	font-family 'ubuntubold'
	src url('fonts/ubuntu-b-webfont.eot')
	src url('fonts/ubuntu-b-webfont.eot?#iefix') format('embedded-opentype'),
		url('fonts/ubuntu-b-webfont.woff2') format('woff2'),
		url('fonts/ubuntu-b-webfont.woff') format('woff'),
		url('fonts/ubuntu-b-webfont.ttf') format('truetype'),
		url('fonts/ubuntu-b-webfont.svg#ubuntubold') format('svg')
	font-weight normal
	font-style normal

@font-face
	font-family 'ubunturegular'
	src url('fonts/ubuntu-r-webfont.eot')
	src url('fonts/ubuntu-r-webfont.eot?#iefix') format('embedded-opentype'),
		url('fonts/ubuntu-r-webfont.woff2') format('woff2'),
		url('fonts/ubuntu-r-webfont.woff') format('woff'),
		url('fonts/ubuntu-r-webfont.ttf') format('truetype'),
		url('fonts/ubuntu-r-webfont.svg#ubunturegular') format('svg')
	font-weight normal
	font-style normal

html, body
	background $background-color
	font-family $font-base
	color $text-color
	font-size 12px

body
	margin 20px

.tabbar
	clearfix()
	width 100%
	linear_gradient(top, $base-gradient-top, $base-gradient-center, $base-gradient-bottom)
	border 1px solid $border-color
	border-radius 3px 3px 0 0

	&__list
		float left
		display flex

		li
			padding 13px 20px
			font-family $font-ubuntubold
			border-right 1px solid $border-color
			cursor pointer

			&.active
				background $active-tab-background
				border-bottom 1px solid $active-tab-border-bottom
				margin-bottom -1px

			&:hover
				background $active-tab-background
				border-bottom 1px solid $active-tab-border-bottom
				margin-bottom -1px

	&__info
		float right
		padding 13px
		font-family $font-ubuntubold

.content
	padding 20px
	border 1px solid $border-color
	border-top none
	border-radius 0 0 3px 3px
	display flex
	flex-wrap wrap

.item
	background $item-background;
	border 1px solid $border-color
	border-radius 3px
	margin 0 10px 10px 0
	width 320px
	display flex
	flex-direction column
	justify-content space-between

	&__infogroup
		display flex
		align-items center
		padding 20px

	&__title
		font-size 20px
		padding 12px 0

	&__text
		font-size 11px

		&.state
			line-height 20px
		&.free
			color $free-show-link-color
		&.paid
			color $paid-show-link-color
		&.private
			color $private-show-link-color

	&__image
		width 70px
		min-width 70px
		height 70px
		border-radius 50%
		overflow hidden
		margin-right 20px

		img
			width 100%

	&__actiongroup
		display flex
		justify-content space-around
		linear_gradient(top, $base-gradient-top, $base-gradient-center, $base-gradient-bottom)

	&__action
		width 100%
		border-top 1px solid $border-color
		border-right 1px solid $border-color
		display flex
		align-items center
		justify-content center
		padding: 12px;
		font-weight bold
		font-size 13px
		font-family $font-base
		color $text-color
		text-decoration none
		cursor pointer
		position relative

		&:hover .popup
			display block

	&__icon
		width 11px
		height 11px
		margin-right 6px


a.item__action
	border-right none

.icon-user
	background url('icons/user.png') no-repeat

.icon-clock
	background url('icons/clock.png') no-repeat

.icon-play
	background url('icons/play.png') no-repeat

.popup
	display none
	position absolute
	padding 20px 0
	background $popup-background
	border-radius 3px
	box-shadow 0 10px 29px 0 rgba(0, 0, 1, 0.28)
	font-size 12px
	z-index 1
	top 100%
	left 50%
	transform(translate(-50%))

	&:after
		content ''
		position absolute
		width 16px
		height 16px
		border-radius 1px
		top 0
		left 50%
		background $popup-background
		box-shadow -2px -2px 6px -1px rgba(0,0,1,0.05)
		transform(rotate(45deg), translate(-50%))

	&.users-popup
		width 187px
	&.time-popup
		width 300px
.users
	width 100%
	max-height 230px
	padding 0 20px
	overflow auto
	li
		width 100%
		line-height 21px
		clearfix()
		&.online
			color $user-online-text-color
		&.offline
			color $user-offline-text-color
	&__name
		float left
		font-weight normal
		word-break break-word
		max-width 70%

	&__amount
		float right
		font-weight bold
		color $text-color


.time
	width 100%
	max-height 230px
	padding 0 20px
	overflow auto
	li
		width 100%
		line-height 21px
		color $text-color
		clearfix()

		&.connected
			font-weight bold
		&.disconnected
			font-weight normal
	&__block
		float left
		font-weight bold
		margin-right 15px

	&__info
		float left
		word-break break-word
		max-width 70%


