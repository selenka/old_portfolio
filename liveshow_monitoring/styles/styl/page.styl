$background-color = #fbfbfb;
$text-color = #636363;
$border-color = #cfcfcf;
$active-tab-border-bottom = #f0f0f0;
$active-tab-background = #ffffff;
$item-background = #fbfbfb;
$base-gradient-top = #fefefe;
$base-gradient-center = #f4f4f4;
$base-gradient-bottom = #e9e9e9;
$user-offline-text-color = #a0a0a0;
$user-online-text-color = #6cb758;
$free-show-link-color = #6cb758;
$paid-show-link-color = #6fa9bf;
$private-show-link-color = #a09966;

$font-ubuntubold = 'ubuntubold';
$font-ubunturegular = 'ubunturegular';
$font-base = 'Arial';


//paths according to style.css in root
@font-face
	font-family 'ubuntubold'
	src url('fonts/ubuntu-b-webfont.eot')
	src url('fonts/ubuntu-b-webfont.eot?#iefix') format('embedded-opentype'),
		url('fonts/ubuntu-b-webfont.woff2') format('woff2'),
		url('fonts/ubuntu-b-webfont.woff') format('woff'),
		url('fonts/ubuntu-b-webfont.ttf') format('truetype'),
		url('fonts/ubuntu-b-webfont.svg#ubuntubold') format('svg')
	font-weight normal
	font-style normal

@font-face
	font-family 'ubunturegular'
	src url('fonts/ubuntu-r-webfont.eot')
	src url('fonts/ubuntu-r-webfont.eot?#iefix') format('embedded-opentype'),
		url('fonts/ubuntu-r-webfont.woff2') format('woff2'),
		url('fonts/ubuntu-r-webfont.woff') format('woff'),
		url('fonts/ubuntu-r-webfont.ttf') format('truetype'),
		url('fonts/ubuntu-r-webfont.svg#ubunturegular') format('svg')
	font-weight normal
	font-style normal

html, body
	background $background-color
	font-family $font-base
	color $text-color
	font-size 12px

body
	margin 20px

.tabbar
	clearfix()
	width 100%
	linear_gradient(top, $base-gradient-top, $base-gradient-center, $base-gradient-bottom)
	border 1px solid $border-color
	border-radius 3px 3px 0 0

	&__list
		float left
		display flex

		li
			padding 13px
			font-family $font-ubuntubold
			border-right 1px solid $border-color
			cursor pointer

			&.active
				background $active-tab-background
				border-bottom 1px solid $active-tab-border-bottom
				margin-bottom -1px

			&:hover
				background $active-tab-background
				border-bottom 1px solid $active-tab-border-bottom
				margin-bottom -1px

	&__info
		float right
		padding 13px
		font-family $font-ubuntubold

.content
	padding 20px
	border 1px solid $border-color
	border-top none
	border-radius 0 0 3px 3px
	display flex

.item
	background $item-background;
	border 1px solid $border-color
	border-radius 3px

	&__infogroup
		display flex
		padding 20px

	&__title
		font-size 20px
		line-height 40px

	&__text
		font-size 11px

		&.state
			line-height 20px
		&.free
			color $free-show-link-color

	&__image
		width 70px
		height 70px
		border-radius 50%
		overflow hidden
		margin-right 20px

		img
			width 100%

	&__actiongroup
		display flex
		justify-content space-around
		linear_gradient(top, $base-gradient-top, $base-gradient-center, $base-gradient-bottom)

	&__action
		width 100%
		border-top 1px solid $border-color
		border-right 1px solid $border-color
		display flex
		align-items center
		justify-content center
		padding: 10px;
		font-weight bold
		font-size 13px
		font-family $font-base
		color $text-color
		cursor pointer

		&:hover
			background $active-tab-background
		&:hover button
			background $active-tab-background

button.item__action
	border-right none

.icon-user
	width 11px
	height 11px
	margin-right 6px
	background url('icons/user.png') no-repeat

.icon-clock
	width 11px
	height 11px
	margin-right 6px
	background url('icons/clock.png') no-repeat

.icon-play
	width 11px
	height 11px
	margin-right 6px
	background url('icons/play.png') no-repeat

